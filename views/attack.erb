

<% if @current_player == @player1 %>
  <div>
    <%= @player_1_name %> attacked <%= @player_2_name %>
  </div>

  <div>
  <%= @player_1_name %>'s hit points: <%= @player_1_hp %>HP
  </div>

  <div>
  <%= @player_2_name %>'s hit points reduced to: <%= @player_2_hp %>HP
  </div>
<% else %>
  <div>
    <%= @player_2_name %> attacked <%= @player_1_name %>
  </div>

  <div>
  <%= @player_2_name %>'s hit points: <%= @player_2_hp %>HP
  </div>

  <div>
  <%= @player_1_name %>'s hit points reduced to: <%= @player_1_hp %>HP
  </div>
<%end %>

<div>
  <form action='/play' method="get">
    <div>
      <input type="submit" value="Next Turn">
    </div>
  </form>
</div>
